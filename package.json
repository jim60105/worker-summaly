{
  "name": "@jim60105/summaly",
  "version": "6.0.0",
  "description": "Get web page's summary - Cloudflare Workers edition",
  "author": "syuilo <syuilotan@yahoo.co.jp>",
  "maintainers": [
    "Jim Chen <Jim@ChenJ.im>"
  ],
  "license": "AGPL-3.0-or-later",
  "repository": "https://github.com/jim60105/worker-summaly.git",
  "bugs": "https://github.com/jim60105/worker-summaly/issues",
  "main": "./built/index.js",
  "type": "module",
  "types": "./built/index.d.ts",
  "packageManager": "pnpm@9.15.9",
  "files": [
    "built",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && tsc-alias",
    "eslint": "eslint",
    "test": "vitest run ./test/index.test.ts ./test/plugins/",
    "test:unit": "vitest run ./test/index.test.ts ./test/plugins/",
    "test:worker": "vitest run --config vitest.worker.config.ts",
    "test:all": "vitest run ./test/index.test.ts ./test/plugins/ && vitest run --config vitest.worker.config.ts",
    "test:watch": "vitest",
    "serve": "wrangler dev",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.12.0",
    "@cloudflare/workers-types": "^4.20260108.0",
    "@misskey-dev/eslint-plugin": "^2.2.0",
    "@types/debug": "4.1.12",
    "@types/escape-regexp": "^0.0.3",
    "@types/node": "24.10.4",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "debug": "^4.4.3",
    "eslint": "^9.38.0",
    "eslint-plugin-import": "^2.32.0",
    "fastify": "^5.6.1",
    "fastify-cli": "^7.4.0",
    "globals": "^17.0.0",
    "tsc-alias": "^1.8.16",
    "typescript": "5.9.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.57.0"
  },
  "dependencies": {
    "cheerio": "1.1.2",
    "escape-regexp": "0.0.1",
    "html-entities": "2.6.0"
  }
